<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/single_item"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="58dp"
            android:layout_height="58dp"/>

    <!--<ImageView-->
        <!--android:id="@+id/image"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:src="@drawable/ic_instagram"/>-->

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:paddingRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.3M"
                    android:textSize="9dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/sub_text_color"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTwo"
                android:textSize="13dp"
                android:text="Instagram"/>


            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_text_color"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:text="Downlod and install this app nd then run it for 30 minutes to unlock this"/>


            <TextView
                android:id="@+id/sub_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/sub_text_color"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:text="Installed 8.7m time(s)"/>

        </LinearLayout>
        </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amount"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:gravity="center"

            android:text="+ 50"
            android:layout_gravity="center"
            android:textColor="@color/blacks"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingEnd="18dp"
            android:paddingStart="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="visible"

        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/colorWhite"/>

</LinearLayout>